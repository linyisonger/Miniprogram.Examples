.photo {
  width: 100%;
  height: 100%;
  border: var(--border);
  display: flex;
  box-sizing: border-box;
}

.abs.photo {
  position: absolute;
  pointer-events: none;
  width: calc(100% - var(--padding));
  height: calc(100% - var(--padding));
  overflow: hidden;
}

.photo__image {
  position: absolute;
}

.photo__loading {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 100%;
  height: 100%;
  transform: translate(-50%, -50%);
}