:host,
.paper {
  width: 100%;
  height: 100%;
  --padding: 10rpx;
}

.paper {
  display: flex;
  box-sizing: border-box;
  padding-right: var(--padding);
  padding-bottom: var(--padding);
  position: relative;
}

.content {
  position: relative;
  width: 100%;
  height: 100%;
}


.trans {
  position: absolute;
  box-sizing: border-box;
  padding-left: var(--padding);
  padding-top: var(--padding);
  --border: 2rpx solid rgb(241, 241, 241);
}

.del {
  position: absolute;
  right: 0;
  top: 10rpx;
  background-color: rgba(0, 0, 0, .2);
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #777;
  border-radius: 0 0 0 20rpx;
  z-index: 100;
}

.compose {
  position: absolute;
  height: 100%;
  width: 100%;
  top: -10000px;
}