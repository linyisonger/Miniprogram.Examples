:host,
.paper {
  width: 100%;
  height: 100%;
  --padding: 24rpx;
}

.paper {
  display: flex;
  box-sizing: border-box;
  padding-right: var(--padding);
  padding-bottom: var(--padding);
  position: relative;
}

.content {
  position: relative;
  width: 100%;
  height: 100%;
}


.trans {
  position: absolute;
  box-sizing: border-box;
  padding-left: var(--padding);
  padding-top: var(--padding);
  --border: 2rpx solid rgb(241, 241, 241);
}

.del {
  position: absolute;
  right: 0;
  top: var(--padding);
  color: #777;
  z-index: 100;
  width: 40rpx;
  height: 40rpx;
}

.compose {
  position: absolute;
  height: 100%;
  width: 100%;
  top: -10000px;
}