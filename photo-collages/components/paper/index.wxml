<wxs module="format">
  module.exports.getStyleForComposing = function (co) {
    return 'left:' + co.x * 100 + '%;top:' + co.y * 100 + '%;width:' + co.w * 100 + '%;height:' + co.h * 100 + '%'
  }
  module.exports.getStyleForPaper = function (co) {
    return 'width:' + co.w + 'rpx;height:' + co.h + 'rpx;'
  }
</wxs>

<view class="paper" style="{{format.getStyleForPaper(paperSize)}}">
  <view class="content">
    <transformation minSize=".5" maxSize="2" class="trans" wx:for="{{imageUrls}}" wx:key="unique" src="{{item}}" style="{{format.getStyleForComposing(composing[index])}}">
      <cover-view class="del" catchtap="delete" data-index="{{index}}">删除</cover-view>
    </transformation>
  </view>
  <canvas type="2d" id="compose" class="compose"></canvas>
</view>